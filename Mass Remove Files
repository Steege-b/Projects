import os, glob

def big_delete(path):
    global count
    folder = glob.glob(f'{path}\*', recursive=True)  ###Replace the path with your path

    for file in folder:
        try:
            os.remove(file)
            count += 1
        except PermissionError:
            pass
    print(f'\nTotal files deleted: {count}')
    repeat=input(str('Is there more to delete?\n'))
    if repeat.lower() != 'yes':
        print('\nSee you later, alligator!')
        pass
    else:
        path2 = input(str('\nEnter the path to the folder you want to purge\nPath: '))
        big_delete2(path2)


def big_delete2(path2):
    global count

    folder = glob.glob(f'{path2}\*', recursive=True)  ###Replace the path with your path
    folder_count = 0
    for file in folder:
        try:
            os.remove(file)
            count += 1
            folder_count += 1
        except PermissionError:
            pass
    print(f'\nTotal files deleted: {count}'
          f'\nTotal files deleted from this folder: {folder_count}')
    repeat = input(str('Is there more to delete?\n'))
    if repeat.lower() != 'yes':
        print('\nSee you later, alligator!')
        pass
    else:
        path2 = input(str('\nEnter the path to the folder you want to purge\nPath: '))
        big_delete2(path2)

try:
    count = 0
    print('Starting the Big Delete V2.0 ...\n'
          '\n<DISCLAIMER>'
          '\nI am not responsible if you delete everything on accident. This SHOULD delete everything except folders in\n'
          'your desired folder. Contents of the folders inside your purged folder SHOULD be safe. Enjoy!\n\n')
    user_path = input('Enter the path to the folder you want to purge\nPath: ')
    big_delete(user_path)
except KeyboardInterrupt:
    print('\n\nCtrl+C ya later buddy\n')
    pass
